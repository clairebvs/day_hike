<%= @trip.name %>

Total distance : <%= @trip.total_distance %>
Average distance : <%= @trip.average_distance %>
Longest distance : <%= @trip.longest_distance %>
Shortest distance : <%= @trip.shortest_distance %>

<% @trip.trails.each do |trail| %>
  <div id="trail-<%=trail.id%>">
    <%= link_to "#{trail.name}", trail_path(trail) %>
    <%= trail.address %>
    <%= trail.length %>
  </div>
<% end %>
